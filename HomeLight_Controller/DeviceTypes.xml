<devicetypes>
    <!--
    device ID is the device type (global)
    Each device can have up to 27 modes (A-Z + #).
    Each mode defines its ID (transmitted to the device) and its controls as child notes of type <control>.
    Each control needs to specifya type and a rank, indicating where in the string it needs to be placed.
    Sliders must define a min and max.
    !-->
    <device id="1">
        <mode id="#" name="Static Color">
            <control type="slider" min="0" max="255" rank="0">Hue</control>
            <control type="slider" min="0" max="255" rank="1">Saturation</control>
            <control type="slider" min="0" max="255" rank="2">Value</control>
        </mode>
        <mode id="A" name="Unclear">
            <control type="slider" min="0" max="255" rank="0">Stuff</control>
        </mode>
        <mode id="B" name="Breathe">
            <control type="slider" min="0" max="255" rank="0">Hue</control>
            <control type="slider" min="0" max="255" rank="1">Saturation</control>
            <control type="slider" min="0" max="255" rank="2">Value</control>
        </mode>
    </device>
    <device id="2">
        <mode id="#" name="Static Color">
            <control type="slider" min="0" max="255" rank="0">Hue</control>
            <control type="slider" min="0" max="255" rank="1">Saturation</control>
            <control type="slider" min="0" max="255" rank="2">Value</control>
        </mode>
    </device>
    <device id="3">
        <mode id="#" name="Static Brightness">
            <control type="slider" min="0" max="255" rank="0">Brightness</control>
        </mode>
    </device>
</devicetypes>
